{
    "name": "WaveletDenoise",
    "operation": {
      "name": "AdditionalEffectFilterSmoothing",
      "category": "AdditionalEffect",
      "description": "Removes Noise from an image using the Wavelet specification. (https://www.imagemagick.org/script/command-line-options.php#wavelet-denoise)",
      "software": "ImageMagick",
      "version": "7.0",
      "arguments":{
        "threshold":{
          "type": "string",
          "defaultvalue": null,
          "description": "Wavelet threshold."
        }
      },
      "transitions": ["image.image"]
    },
    "command": {
      "default":[
        "mogrify",
        "-wavelet-denoise",
        "{threshold}%",
        "{inputimage}",
        "{outputimage}"
      ],
      "win": [
        "magick",
        "mogrify",
        "-wavelet-denoise",
        "{threshold}%",
        "{inputimage}",
        "{outputimage}"
      ],
      "darwin":[
        "mogrify",
        "-wavelet-denoise",
        "{threshold}%",
        "{inputimage}",
        "{outputimage}"
      ],
      "linux":[
        "mogrify",
        "-wavelet-denoise",
        "{threshold}%",
        "{inputimage}",
        "{outputimage}"
      ]
    }
}
