{
  "operation": {
    "category": "Transform",
    "name": "TransformResize",
    "description": "Resize using ImageMagick. Ignore aspect ratio and using custom interpolation method.",
    "version": "7.0",
    "arguments": {
      "WIDTHxHEIGHT": {
        "type": "string",
        "defaultvalue": null,
        "description": "Desired size, with an x in between (e.g. 1024x768)"
      },
      "METHOD": {
        "type": "list",
        "values": ["Bilinear", "Nearest", "Mesh", "Catrom", "Spline"],
        "defaultvalue": "bilinear",
        "description": "Interpolation method (Catrom = Bicubic) http://www.imagemagick.org/Usage/misc/#interpolate."
      }

    },
    "transitions": ["image.image"],
    "software": "ImageMagick"
},
  "command": ["magick",
    "convert",
    "{inputimage}",
    "-resize",
    "{WIDTHxHEIGHT}!",
    "-interpolate",
    "{METHOD}",
    "{outputimage}"
  ],
  "name": "Resize"
}