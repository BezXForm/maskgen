{
    "name": "GaussianBlur",
    "operation": {
      "name": "AdditionalEffectFilterBlur",
      "category": "AdditionalEffect",
      "description": "Automatically apply a motion blur with the given radius and sigma value. (https://www.imagemagick.org/script/command-line-options.php#blur)",
      "software": "ImageMagick",
      "version": "7.0",
      "arguments":{
        "RADIUSxSIGMA":{
          "type": "string",
          "defaultvalue": null,
          "description": "Blur specifications, must be entered with an x in between (e.g. 25x2)."
        }
      },
      "transitions": ["image.image"]
    },
    "command": {
      "default":[
        "convert",
        "-blur",
        "{RADIUSxSIGMA}",
        "{inputimage}",
        "{outputimage}"
      ],
      "win": [
        "magick",
        "convert",
        "-blur",
        "{RADIUSxSIGMA}",
        "{inputimage}",
        "{outputimage}"
      ],
      "darwin":[
        "convert",
        "-blur",
        "{RADIUSxSIGMA}",
        "{inputimage}",
        "{outputimage}"
      ],
      "linux":[
        "convert",
        "-blur",
        "{RADIUSxSIGMA}",
        "{inputimage}",
        "{outputimage}"
      ]
    }
}
